{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": ["es6", "DOM"],
    "types": ["reflect-metadata"],
    "strict": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": ["node_modules/@types", "node_modules/koa-body", "./typings"] //将找不到types的js放在typings下
  },
  "include": ["**/*", "./typings"]
}
